{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": ["es6", "es2015", "es2016", "es2017", "es2019", "es2020"],
    "target": "ES5",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist"
  },
  "compileOnSave": false,
  "include": ["typings/**/*.d.ts", "src"],
  "exclude": [
    "node_modules/",
    "dist",
  ],
  "typeRoots": ["./node_modules/@types", "./typings"]
}